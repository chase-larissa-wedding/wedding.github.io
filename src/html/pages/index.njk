        <img class="floral" src="images/floral-image.jpg" srcset="images/floral-image.jpg 1x, images/floral-image@2x.jpg 2x"/>
      </div>
    </div>
	</div>




	<div class="section" id="rsvp" data-anchor="rsvp">

    <div class="stage t-center">
      <div class="outline">
        <div class="mb2">
          <h2 class="text">
            R.S.V.P.
          </h2>
        </div>


        <div class="mx-auto mxw-30 mb2">
          <p class="text text--first hide-if-submitted">
            Please use the form below to confirm your RSVP status;
          </p>
          <p class="text text--first show-if-submitted">
            Thank you for submitting the form! Have a great day. <a href="" id="reset-form">Send another?</a>
          </p>
        </div>

        <div class="md-mt3 md-mb1 mx-auto col-12 mxw-20 hide-if-submitted">

          <form id="contact" action="https://formspree.io/chase.larissa.wedding@gmail.com" method="POST">

            <div class="mb2">
              <input type="text" name="first last name" class="input mb1" placeholder="First & Last Name(s)" required>
              <input type="email" name="email" class="input mb1" placeholder="Email Address" required>
							<textarea name="notes" class="input" placeholder="Notes / Other guests"></textarea>
            </div>


						<p class="text mb1">
              Will you be attending?
            </p>
            <div class="clearfix mb2 sm-px3">
              <div class="col col-6">
                <label for="yes">
                  Yes
                  <input id="yes" class="ml1" type="radio" name="attending" value="yes" checked="checked" required>
                </label>
              </div>
              <div class="col col-6">
                <label for="no">
                  No
                  <input id="no" class="ml1" type="radio" name="attending" value="no">
                </label>
              </div>
            </div>


            <div class="md-mb2">
              <input type="submit" class="btn col-12" value="Send" required>
            </div>
          </form>
        </div>
      </div>
    </div>

  </div>


	<div class="section section--about" id="about" data-anchor="about">

